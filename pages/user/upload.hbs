    <style>
                body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        #blogForm {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 400px;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
        }

        input[type="text"],
        textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        input[type="file"] {
            margin-top: 5px;
        }

        button[type="submit"] {
            background-color: #007bff;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            margin-top: 10px;
            cursor: pointer;
        }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }

        #imagePreview {
            margin-top: 10px;
        }

        .image-preview {
            max-width: 100px;
            max-height: 100px;
            margin-right: 10px;
            margin-bottom: 10px;
        }
    </style>
    
</head>
<body>
    <div class="container">

        <h1>Blog Content Upload</h1>
        <form action="/createBlog?id={{userDetails._id}}" method="post" id="blogForm" enctype="multipart/form-data">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>

            <label for="content">Content</label>
            <textarea name="content" id="content" rows="7" required></textarea> 

            <label for="image">Image:</label>
            <input type="file" name="images" id="imageInput" multiple accept="image/*" onchange="showImages()" required>

            <div id="imagePreview"></div>

            <button type="submit">Upload</button>
        </form>
    </div>
    <script src="/adminScript.js"></script>
</body>
</html>